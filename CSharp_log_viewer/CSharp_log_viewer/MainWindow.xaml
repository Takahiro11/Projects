<Window x:Class="CSharp_log_viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="535" Width="905" AllowDrop="True">
    <Grid x:Name="GridMainWindow" AllowDrop="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="669*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="10,455,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="446" PreviewDragOver="TextBox1_PreviewDragOver" Drop="TextBox1_Drop"/>
        <Button x:Name="start" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="216,455,0,0" VerticalAlignment="Top" Width="68" Click="test1"/>
        <DataGrid x:Name="DataGrid1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="411" Width="875" SelectionChanged="DataGrid_SelectionChanged" Grid.ColumnSpan="2" Margin="10,10,0,0" AllowDrop="True"/>

    </Grid>
</Window>
